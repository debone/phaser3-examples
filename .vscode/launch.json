{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Tester",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd":"${fileDirname}",
            "type": "node"
        },
        {
            "name": "Launch Screenshots",
            "program": "${workspaceFolder}/generate-screenshots.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Transformer",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd":"${workspaceFolder}/transformer/",
            "preLaunchTask": "tsc: build - transformer/tsconfig.json",
            "program": "${workspaceFolder}/transformer/transformES5.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TS Node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd":"${fileDirname}",
            "preLaunchTask": "tsc: build - transformer/tsconfig.json",
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
